<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:inputType="textCapWords"
            android:hint="Your name"/>

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:inputType="textEmailAddress"
            android:hint="Email address"/>
        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:inputType="textPassword"
            android:hint="Create password"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sign_up_course_spinner"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/sign_up_policies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            android:lineSpacingExtra="3dp"
            android:text="Creating account here means you accept our Privacy Policy and Terms &amp; Conditions."/>

        <TextView
            android:id="@+id/sign_up_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_margin="15dp"
            android:lineSpacingExtra="3dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round_button"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:minWidth="256dp"
            android:fontFamily="@font/sans_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Create account in mCSVTU"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlue"
            android:layout_margin="15dp"
            android:lineSpacingExtra="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="You'll receive email verification link via email."/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_up_ad_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="15dp"
            app:contentPadding="15dp">
            <FrameLayout
                android:id="@+id/sign_up_native_ad_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>